    "item": [
        {
            "name": "Blueprints",
            "item": [
                {
                    "name": "Get All Blueprints",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/blueprints",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "blueprints"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Blueprint by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/blueprints/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "blueprints",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{blueprintId}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Blueprint",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Employment Contract Template\",\n  \"fields\": [\n    {\n      \"type\": \"text\",\n      \"label\": \"Employee Name\",\n      \"position\": {\n        \"x\": 100,\n        \"y\": 50\n      }\n    },\n    {\n      \"type\": \"date\",\n      \"label\": \"Start Date\",\n      \"position\": {\n        \"x\": 100,\n        \"y\": 100\n      }\n    },\n    {\n      \"type\": \"text\",\n      \"label\": \"Position\",\n      \"position\": {\n        \"x\": 100,\n        \"y\": 150\n      }\n    },\n    {\n      \"type\": \"signature\",\n      \"label\": \"Employee Signature\",\n      \"position\": {\n        \"x\": 100,\n        \"y\": 250\n      }\n    },\n    {\n      \"type\": \"checkbox\",\n      \"label\": \"I agree to terms\",\n      \"position\": {\n        \"x\": 100,\n        \"y\": 300\n      }\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/blueprints",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "blueprints"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Blueprint",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Updated Employment Contract\",\n  \"fields\": [\n    {\n      \"type\": \"text\",\n      \"label\": \"Full Name\",\n      \"position\": {\n        \"x\": 100,\n        \"y\": 50\n      }\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/blueprints/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "blueprints",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{blueprintId}}"
                                }
                            ]
                        }
                    }
                },
